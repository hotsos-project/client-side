{
    "extends": "nx/presets/npm.json",
    "affected": {
        "defaultBase": "main"
    },
    "workspaceLayout": {
        "appDir": "services",
        "libDir": "packages"
    },
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build", "dev"]
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"]
        }
    }

}